{
  "name": "vscode-enhance-prompt",
  "displayName": "Enhance Prompt",
  "description": "一键将口语化描述增强为结构化开发任务（DeepSeek LLM 驱动）",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenvor/vscode-enhance-prompt"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "publisher": "zenvor",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Enhance Prompt",
      "properties": {
        "enhancePrompt.deepseekApiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API Key（若留空则使用环境变量 DEEPSEEK_API_KEY）"
        },
        "enhancePrompt.model": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "DeepSeek 模型名称，例如 deepseek-chat / deepseek-reasoner"
        },
        "enhancePrompt.temperature": {
          "type": "number",
          "default": 0.2,
          "description": "生成温度"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "enhancePrompt",
          "title": "Enhance",
          "icon": "media/sparkle.svg"
        }
      ]
    },
    "views": {
      "enhancePrompt": [
        {
          "icon": "media/sparkle.svg",
          "type": "webview",
          "id": "enhancePrompt.view",
          "name": "Enhance Prompt"
        }
      ]
    }
  },
  "scripts": {
    "watch": "tsc -w -p ./",
    "compile": "tsc -p ./",
    "build": "npm run compile",
    "prepackage": "npm run build",
    "package": "vsce package"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.8.3",
    "@types/vscode": "^1.85.0",
    "@types/node": "^24.0.15"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
